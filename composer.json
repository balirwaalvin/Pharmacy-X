{
    "name": "balirwaalvin/pharmacy-x",
    "description": "A comprehensive web-based pharmacy management system",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Balirwa Alvin Daniel",
            "email": "sanyukalvin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "ext-mysqli": "*",
        "ext-session": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "php": "^8.1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'Installation completed successfully'"
        ],
        "post-update-cmd": [
            "echo 'Update completed successfully'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
